<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDeepSkyBlue</item>
        <item name="colorPrimaryDark">@color/colorDeepSkyBlueDark</item>
        <item name="colorAccent">@color/colorDeepSkyBlue</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_deejai</item>
    </style>

    <style name="HeaderBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorGray</item>
        <item name="colorPrimaryDark">@android:color/darker_gray</item>
        <item name="colorAccent">@color/colorDeepSkyBlue</item>
    </style>

</resources>
